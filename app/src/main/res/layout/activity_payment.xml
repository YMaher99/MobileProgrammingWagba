<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/background">

    <ImageView
        android:id="@+id/wagba_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:src="@drawable/wagba_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/payment_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="Enjoy your Wagba!"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        ></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/payment_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Type"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textSize="16dp"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/payment_radio_group"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Credit Card"
            android:textSize="16dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cash On Delivery"
            android:textSize="16dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/payment_total_tv"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delivery_gate_radio_group"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Payment Total"
        android:textColor="@color/black"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/meal_price_tv"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delivery_gate_radio_group"
        app:layout_constraintStart_toStartOf="@id/delivery_radio_group"
        android:textColor="@color/black"
        android:text="100 EGP"
        android:textSize="16dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/payment_radio_group"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Delivery Time"
        android:textColor="@color/black"
        android:textSize="16dp"
        />

    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/payment_radio_group"
        app:layout_constraintTop_toBottomOf="@id/payment_radio_group"
        android:id="@+id/delivery_radio_group"
        >
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="12:00 PM"
            android:textSize="16dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="03:00 PM"
            android:textSize="16dp"/>


    </RadioGroup>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/delivery_radio_group"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Delivery Gate"
        android:textColor="@color/black"
        android:textSize="16dp"
        />

    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/payment_radio_group"
        app:layout_constraintTop_toBottomOf="@id/delivery_radio_group"
        android:id="@+id/delivery_gate_radio_group"
        >
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Gate 2"
        android:textSize="16dp"/>
    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Gate 3"
        android:textSize="16dp"/>

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/foreground_element"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:text="Order NOW"/>

</androidx.appcompat.widget.LinearLayoutCompat>